        <Viewbox Grid.Column="1"
                 Grid.Row="10"
                 Stretch="Uniform">
            <Button x:Name="StopButton"
                    MouseDown="ButtonStop_Click"
                    FontSize="14" 
                    Content="Stop" 
                    Margin="10" />
        </Viewbox>
        
        <Viewbox Grid.Column="7" 
                 Grid.Row="10" 
                 Stretch="None">
            <CheckBox x:Name="AudioOverlapCheckBox" 
                      FontSize="14" 
                      Content="Overlap Audio?" 
                      Foreground="White" 
                      FontFamily="#Dosis"
                      FontWeight="Medium"
                      Click="AudioOverlapCheckBox_Click"/>
        </Viewbox>
        
        <Viewbox Grid.Column="2" 
                 Grid.Row="10" 
                 Stretch="None">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Local Volume" 
                       FontSize="14"
                       FontFamily="#Dosis"
                       FontWeight="Medium"
                       Foreground="White"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Grid.Row="0"/>
                <Slider x:Name="LocalVolumeSlider" 
                        Grid.Row="1" 
                        Maximum="100"               
                        ValueChanged="LocalVolumeSlider_ValueChanged"/>
            </Grid>
        </Viewbox>
        
        <Viewbox Grid.Column="3"
                 Grid.Row="10" 
                 Stretch="None">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Cable Volume" 
                       FontSize="14" 
                       Foreground="White" 
                       FontFamily="#Dosis"
                       FontWeight="Medium"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Grid.Row="0" />
                <Slider x:Name="CableVolumeSlider" 
                        Grid.Row="1" 
                        Maximum="100" 
                        ValueChanged="CableVolumeSlider_ValueChanged"/>
            </Grid>
        </Viewbox>

        <Grid.Resources>
            <Style TargetType="Button">
                <Setter Property="TextElement.FontFamily"
                        Value="#Dosis" />
                <Setter Property="Background" 
                        Value="#FFDE6B36" />
                <Setter Property="Cursor" 
                        Value="Hand" /> 
                <Setter Property="Margin" 
                        Value="5" />
                <Setter Property="ClickMode" 
                        Value="Hover" />
                <Setter Property="FontSize" 
                        Value="10" />
                <Setter Property="Foreground" 
                        Value="White" />
                <Setter Property="FontWeight"
                        Value="Medium" />
                <Setter Property="Control.Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Width="120"
                                    MaxWidth="120"
                                    Height="35"
                                    CornerRadius="15"
                                    Background="{TemplateBinding Background}" >
                                <ContentPresenter
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>

                <Style.Triggers>
                    <Trigger Property="IsMouseOver" 
                             Value="True">
                        <Setter Property="Background"
                                Value="#E39063" />
                    </Trigger>
                </Style.Triggers>
            </Style>
        </Grid.Resources>
    </Grid>
</Window>
